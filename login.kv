#:include connected.kv

<Login>:
    spacing: 10
    space_x: self.size[0]/3
    AnchorLayout
        BoxLayout:
            id: login_layout
            orientation: 'vertical'
            padding: [10,50,10,10]
            spacing: 300
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Добро пожаловать!'
                    font_size: 32

                BoxLayout:
                    orientation: 'vertical'
                    size_hint: [1,.35]
                    Label:
                        text: ''
                        font_size: 25
                        halign: 'left'
                        text_size: root.width-25, 25

                    TextInput:
                        hint_text: "Логин"
                        id: login
                        multiline:False
                        font_size: login.size[-1] - (login.size[-1] * 0.3)

                BoxLayout:
                    orientation: 'vertical'
                    size_hint: [1,.35]
                    Label:
                        text: ''
                        halign: 'left'
                        font_size: 25
                        text_size: root.width-25, 25

                    TextInput:
                        hint_text: "Пароль"
                        id: password
                        multiline:False
                        password:True
                        font_size: password.size[-1] - (password.size[-1] * 0.3)
            BoxLayout:
                orientation: 'vertical'
                spacing: -300
                Label:
                    id: display_status
                    text: 'Добро пожаловать!'
                    font_size: 32

                Button:
                    text: 'Войти'
                    font_size: 24
                    size_hint: [1,.1]

                    on_press: root.do_login(login.text, password.text, display_status)